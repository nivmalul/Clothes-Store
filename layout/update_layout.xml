<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/login_header"
            layout="@layout/login_header" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorRed"
            android:hint="UserName"
            android:singleLine="true"
            android:id="@+id/reg_username"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/reg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_username"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/colorRed"
            android:hint="Password"
            android:inputType="textPassword"
            android:singleLine="true" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorNewBlue"
            android:hint="Last name"
            android:singleLine="true"
            android:id="@+id/last_name"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/private_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Private name"
            android:singleLine="true"
            android:textColorHint="@color/colorNewBlue" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorNewBlue"
            android:hint="name@email"
            android:singleLine="true"
            android:id="@+id/reg_email"
            android:layout_marginBottom="8dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorNewBlue"
            android:hint="Address"
            android:singleLine="true"
            android:id="@+id/reg_address"
            android:layout_marginBottom="8dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorNewBlue"
            android:hint="phone number"
            android:singleLine="true"
            android:id="@+id/reg_phone"
            android:layout_marginBottom="8dp" />



        android:singleLine="true" />


        <Button
            android:id="@+id/update_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/shape_dp"
            android:backgroundTint="@color/colorRed"

            android:text="@string/updateData" />


    </LinearLayout>
</ScrollView>